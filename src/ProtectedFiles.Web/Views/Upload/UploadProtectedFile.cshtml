@model int
@{
    ViewData["Title"] = "UploadProtectedFile";
}

<h2>Upload Protected File</h2>

<form action="UploadProtectedFile"
      enctype="multipart/form-data"
      method="post">
    <dl>
        <dt>
            <label for="FileUpload_FormFile">File</label>
        </dt>
        <dd>
            <input type="hidden" name="itemId" value="@Model"/>
            <input id="FileUpload_FormFile" type="file" style="width: 100%"
                   name="File" />
        </dd>
    </dl>

    <input class="btn btn-success" type="submit" value="Upload" />
</form>